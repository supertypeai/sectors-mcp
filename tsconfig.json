{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "webworker"
    ],
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "worker-configuration.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
